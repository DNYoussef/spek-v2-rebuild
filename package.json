{
  "name": "spek-platform-v8",
  "version": "8.0.0",
  "description": "SPEK Platform v8 - AI Agent Coordination with Atlantis UI",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cd atlantis-ui && npm run dev",
